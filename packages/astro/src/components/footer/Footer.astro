---
import "./footer.css"
import type { StrapiSocialMedia } from "../../data/schema/social-media.schema"

import SocialMediaLink from "./SocialMediaLink.astro"

export type Props = {
  socialMedia: StrapiSocialMedia[]
}

const { socialMedia } = Astro.props as Props
---

<footer class="bg-gray-700 text-gray-100">
  <div class="px-6 py-responsive md:container md:px-8">
    <div class="flex flex-wrap-reverse items-end justify-between gap-responsive">
      <div>
        <h2 class="mb-responsive-1/2 text-sm font-semibold uppercase leading-5 tracking-wider">Info</h2>
        <div class="flex flex-col">
          <a href="/articles/impressum">Impressum</a>
          <a href="/articles/datenschutzerklaerung">Datenschutz</a>
        </div>
      </div>
      <div>
        <h2 class="mb-responsive-1/2 text-sm font-semibold uppercase leading-5 tracking-wider">Folge mir auf</h2>
        <div class="flex flex-row gap-responsive-1/4">
          {socialMedia.map(item => <SocialMediaLink socialMedia={item} />)}
        </div>
      </div>
    </div>
  </div>
</footer>
