---
import type { StrapiArticleListItem } from "../../data/get-article-list"

import ArticleListItem from "./ArticleListItem.astro"

export type Props = { articles: StrapiArticleListItem[] }

const { articles } = Astro.props as Props
---

<div class="grid gap-responsive sm:grid-cols-fit-sm lg:grid-cols-fit-lg">
  {articles.map(article => <ArticleListItem article={article} />)}
</div>
