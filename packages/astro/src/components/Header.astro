---
import NavBar from "./NavBar.astro"

export type Props = {
  logoUrl: string
}

const { logoUrl } = Astro.props as Props
---

<header role="banner">
  <div class="sr-only top-2 z-30 focus-within:not-sr-only focus-within:fixed focus-within:w-screen">
    <div class="flex justify-center">
      <a href="#main-content" class="mx-auto rounded-md border-2 border-gray-200 bg-gray-900 p-2 px-4 text-gray-200">
        Zum Haupt-Inhalt springen
      </a>
    </div>
  </div>
  <NavBar logoUrl={logoUrl} />
</header>
