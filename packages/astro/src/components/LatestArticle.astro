---
import { faChevronRight } from "@fortawesome/free-solid-svg-icons"
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome"

import { getArticleList } from "../data/get-article-list"

import ArticleListItem from "./article-list/ArticleListItem.astro"

const articles = await getArticleList({ pagination: { page: 1, pageSize: 1 } })
const latestArticle = articles.data[0]
---

<aside aria-labelledby="latest-blog-entry-title" class="flex flex-col gap-5">
  <h2 id="latest-blog-entry-title" class="font-sans text-xl font-semibold tracking-tight">Aktuellster Blogeintrag</h2>
  <ArticleListItem article={latestArticle} />
  <a class="self-end" href="/articles">
    <span class="underline">Alle Blogeintr√§ge</span>
    <FontAwesomeIcon className="ml-1" icon={faChevronRight} />
  </a>
</aside>
