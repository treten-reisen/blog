---
import type { CommentCollectionType } from "../data/post-comment"
import CommentButton from "./comment-button"

export type Props = {
  collection: CommentCollectionType
  id: number
}

const { id, collection } = Astro.props as Props
---

<CommentButton
  client:visible
  collection={collection}
  id={id}
  strapiUrl={import.meta.env.STRAPI_API_URL}
/>
