---
export type Props = {
  identifier: string
  title: string
  url: string
}

const { identifier, title, url } = Astro.props as Props

console.log(url)
---

<style>
  *:focus-visible,
  *:focus {
    outline: none !important;
  }
</style>

<div id="disqus_thread"></div>
<script is:inline define:vars={{ url, identifier, title }}>
  var disqus_config = function () {
    this.page.url = url // Replace PAGE_URL with your page's canonical URL variable
    this.page.identifier = identifier // Replace PAGE_IDENTIFIER with your page's unique identifier variable
  }

  ;(function () {
    // DON'T EDIT BELOW THIS LINE
    var d = document,
      s = d.createElement("script")
    s.src = "https://treten-reisen.disqus.com/embed.js"
    s.setAttribute("data-timestamp", (+new Date()).toString())
    ;(d.head || d.body).appendChild(s)
  })()
</script>
