---
import ArticleList from "../../components/article-list/ArticleList.astro"
import Seo from "../../components/Seo.astro"
import { getArticleList } from "../../data/get-article-list"
import { getGlobal } from "../../data/get-global"
import { getPage } from "../../data/get-page"
import Layout from "../../layouts/Layout.astro"

const list = await getArticleList()
const global = await getGlobal()
const page = await getPage("articles")
---

<Layout>
  <Fragment slot="head">
    <Seo type="website" global={global.data} seo={page.attributes.seo} />
  </Fragment>
  <h1 class="mb-6 font-sans text-2xl font-bold tracking-tight md:mb-responsive-3/4">Blog</h1>
  <ArticleList articles={list.data} />
</Layout>
