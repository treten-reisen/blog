---
import OlMap from "../components/map/map"
import Seo from "../components/Seo.astro"
import { getGlobal } from "../data/get-global"
import Layout from "../layouts/Layout.astro"

const global = await getGlobal()

const strapiUrl = import.meta.env.STRAPI_API_URL
const apiKey = import.meta.env.MAPTILER_API_KEY
const avatarUrl = global.data.attributes.avatar.data.attributes.url
---

<Layout noPadding>
  <Seo type="website" global={global.data} slot="seo" />
  <OlMap backendUrl={strapiUrl} apiKey={apiKey} avatarUrl={avatarUrl} client:only="react" />
</Layout>
