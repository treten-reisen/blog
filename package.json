{
  "name": "@treten.reisen/monorepo",
  "version": "1.0.0",
  "description": "treten.reisen Monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "gcp-build": "yarn workspace @treten-reisen/strapi run gcp-build",
    "develop:strapi": "yarn workspace @treten-reisen/strapi develop",
    "develop:frontend": "yarn workspace @treten-reisen/frontend develop",
    "develop:frontend:wait": "wait-on http://localhost:1337 && yarn develop:frontend",
    "develop": "concurrently -n strapi,frontend -c bgBlue.bold,bgMagenta.bold yarn:develop:strapi yarn:develop:frontend:wait",
    "preview": "cross-env NODE_ENV=preview yarn develop:frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patsimm/treten.reisen.git"
  },
  "author": "Patrick Simmelbauer <patrick.simmelbauer@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/patsimm/treten.reisen/issues"
  },
  "homepage": "https://github.com/patsimm/treten.reisen#readme",
  "devDependencies": {
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "wait-on": "^6.0.1",
    "rimraf": "^3.0.2"
  }
}
