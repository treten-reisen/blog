{
  "name": "@treten-reisen/monorepo",
  "packageManager": "yarn@3.2.3",
  "version": "1.0.0",
  "description": "treten.reisen Monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "gcp-build": "yarn workspaces foreach run gcp-build",
    "gcp-entrypoint": "yarn workspace @treten-reisen/strapi start",
    "develop:strapi": "yarn workspace @treten-reisen/strapi develop",
    "develop:astro": "yarn workspace @treten-reisen/astro start",
    "develop:astro:wait": "wait-on http://localhost:1337 && yarn run develop:astro",
    "develop": "concurrently -n strapi,astro -c bgBlue.bold,bgMagenta.bold yarn:develop:strapi yarn:develop:astro:wait",
    "preview": "cross-env NODE_ENV=preview yarn run develop:astro",
    "prepare": "husky install",
    "pre-commit": "yarn workspaces foreach run pre-commit",
    "lint": "yarn workspaces foreach run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patsimm/treten.reisen.git"
  },
  "author": "Patrick Simmelbauer <patrick.simmelbauer@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/patsimm/treten.reisen/issues"
  },
  "homepage": "https://github.com/patsimm/treten.reisen#readme",
  "devDependencies": {
    "concurrently": "7.4.0",
    "cross-env": "7.0.3",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "wait-on": "6.0.1"
  }
}
